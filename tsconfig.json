{
  "compilerOptions": {
    "target": "ES2020",                       
    "module": "CommonJS",                     
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "outDir": "dist",                         
    "rootDir": "src",                         
    "baseUrl": "./src",                       
    "paths": {                               
      "@models/*": ["models/*"],
      "@utils/*": ["utils/*"],
      "@services/*": ["services/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "coverage", "**/*.test.ts"]
}

